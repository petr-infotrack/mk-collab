@model IEnumerable<AlertsAdmin.Domain.Models.Alert>
<style>
    svg.ct-chart-bar {
        overflow: visible;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Instances.First().MessageType.Template)</th>
            <th>@Html.DisplayNameFor(model => model.Count)</th>
            <th>@Html.DisplayNameFor(model => model.First().FirstOccurance)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastOccurance)</th>
        </tr>
    </thead>
    @foreach (var alert in Model.OrderBy(a => a.AlertPriority).ToList())
    {
        <tr>
            <td>@Html.DisplayFor(m => alert.Instances.First().MessageType.Template)</td>
            <td>@Html.DisplayFor(m => alert.Count)</td>
            <td>@Html.DisplayFor(m => alert.FirstOccuranceString)</td>
            <td>@Html.DisplayFor(m => alert.LastOccuranceString)</td>
        </tr>
    }
</table>